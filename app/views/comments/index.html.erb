<p id="notice"><%= notice %></p>

<h1>Comments</h1>

<table>
  <thead>
    <tr>
      <th>Commenter</th>
      <th>Body</th>
      <th>Post</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.commenter %></td>
        <td><%= comment.body %></td>
        <!--td><%#= comment.post %></td-->
        <!--td><%#= link_to 'Show', comment %></td-->
        <td><%= link_to 'Show', [comment.post, comment] %></td>
        <!--td><%#= link_to 'Edit', edit_comment_path(comment) %></td-->
        <td><%= link_to 'Edit', edit_post_comment_path(comment.post, comment) %></td>
        <!--td><%#= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td-->
        <td><%= link_to 'Destroy', [comment.post, comment], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%#= link_to 'New Comment', new_comment_path %>
<%= link_to 'New Comment', new_post_comment_path %>
